@page
@model Library_Managment_System_ASP.NET_API.Pages.Book.IndexModel
@{
    ViewData["Title"] = "Books";
}

<div class="container mt-5">
    <h1>@Model.PageName</h1>
    <table class="table">
        <thead>
            <tr>
                <th>Book Id</th>
                <th>Title</th>
                <th>Author</th>
                <th>Published</th>
                <th>Genre</th>
                <th>Actions</th>
            </tr>
        </thead>

        <tbody>
            @foreach (var book in Model.bookList)
            {
                <tr>
                    <td>@book.BookId</td>
                    <td>@book.Title</td>
                    <td>@book.Author</td>
                    <td>@book.Published</td>
                    <td>@book.Genre</td>
                    <td>
                        <form method="post">
                            <input type="hidden" name="BookId" value="@book.BookId" />
                            <button type="submit" class="btn btn-danger" asp-page-handler="Delete" asp-route-id="@book.BookId">Delete</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <form method="post">
        <h2>Add New Book</h2>
        <div class="form-group">
            <label for="title">Title:</label>
            <input type="text" class="form-control" id="title" name="Title" required>
        </div>
        <div class="form-group">
            <label for="author">Author:</label>
            <input type="text" class="form-control" id="author" name="Author" required>
        </div>
        <div class="form-group">
            <label for="published">Published:</label>
            <input type="number" class="form-control" id="published" name="Published" required>
        </div>
        <div class="form-group">
            <label for="genre">Genre:</label>
            <input type="text" class="form-control" id="genre" name="Genre" required>
        </div>
        <div class="form-group">
            <label for="BookId">Book to Update:</label>
            <input type="number" name="BookId" class="form-control" id="BookId"/>
        </div>
        <div>
            <button type="submit" class="btn btn-primary">Add Book</button>
            <button type="submit" class="btn btn-secondary" asp-page-handler="EditBook">Edit Book</button>
        </div>
        
    </form>
    <form method="post">
        <div>
            <h2>Search Book By ID</h2>
            <div class="form-group">
                <label for="searchId">Book ID:</label>
                <input type="number" class="form-control" id="searchId" name="SearchId" value="">
            </div>
            <button type="submit" class="btn btn-primary" asp-page-handler="SearchBook">Search</button>
        </div>
    </form>
    

</div>
